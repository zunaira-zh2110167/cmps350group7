// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AssessmentType {
  id    String @id
  label String
}

model User {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String    @unique
  password           String
  role               String
  program            String
  registeredSections Section[] @relation("StudentSections")
}


model Section {
  crn          String @id
  courseCode   String
  courseName   String
  creditHours  Int
  instructorId Int
  program      String
  semester     String
  students     User[] @relation("StudentSections")
}

model Assessment {
  id          Int      @id @default(autoincrement())
  sectionCRN  String //references section crn
  title       String
  type        String
  dueDate     DateTime
  effortHours Int
  weight      Float
  createdBy   Int
  createdDate DateTime @default(now())
}

model Semester {
  id        String  @id
  label     String
  isDefault Boolean @default(false)
}

model Comment {
  id               Int      @id @default(autoincrement())
  sectionCRN       String
  authorId         Int
  title            String
  content          String
  createdAt        DateTime @default(now())
  replyToCommentId String?
}

